@{
    ViewBag.Title = "Home Page";
}

<div class="jumbotron">
    <h1>ASP.NET</h1>
    <p class="lead">ASP.NET is a free web framework for building great Web sites and Web applications using HTML, CSS and JavaScript.</p>
    <p><a href="http://asp.net" class="btn btn-primary btn-lg">Learn more &raquo;</a></p>
</div>

<div class="row">
	<div class="col-md-12">
		<form class="form-inline">
			<div class="form-group">
				<label for="path">Path</label>
				<input type="text" class="form-control" id="path" placeholder="">
			</div>
			<button type="submit" class="btn btn-default">Show</button>
		</form>
	</div>
</div>

<div>
	<div class="col-md-12">
		<table class="table" id="file-list">
			<tr>
				<td>Name</td><td>Full path</td><td>Action</td>
			</tr>
			<!-- -->
		</table>
	</div>
</div>

@section scripts {
	<script id="list-template" type="text/x-handlebars-template">
	{{#each Directories}}
	<tr>
		<td>{{ dirLink this}}</td>
		<td>{{ Path }}</td>
	</tr>
	{{/each}}
		
		{{#each Files}}
		<tr>
			<td>{{ Name }}</td>
			<td>{{ Path }}</td>
		</tr>
		{{/each}}
</script>

<script>
		var source = $("#list-template").html();
		var template = Handlebars.compile(source);

	var Browse = function(path) {
		$("#path").val(path);
		$("#path").trigger("change");
		e.preventDefault();
	}

		Handlebars.registerHelper('dirLink',
			function(folder) {
				return new Handlebars.SafeString("<a href='#' onclick='Browse(\"" + folder.Path + "\")'>" + folder.Name + "</a>");
			});

		$("#path")
			.change(function() {
				$.getJSON("/api/files/get",
					{path: encodeURI($("#path").val())},
					function(data) {
						var html = template(data);

						$("#file-list tbody").append(html);
					});
			});
</script>
}