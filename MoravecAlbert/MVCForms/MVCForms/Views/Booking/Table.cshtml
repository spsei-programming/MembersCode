@model MVCForms.Models.Booking.BookTableVM
@{
	ViewBag.Title = "Table";
}

<h2>Book your table</h2>


@using (Html.BeginForm("SaveTable", "Booking", FormMethod.Post))
{
	<div class="row">
		<div class="col-md-12">
			<div class="form-group">
				<label>Date</label>
				@Html.TextBoxFor(model => model.Date, new { type = "date", @class = "form-control", placeholder = "Select a date" })
			</div>
			<div class="form-group">
				<label>Amount of people</label>
				@Html.TextBoxFor(model => model.AmmountOfPeople, new { @class = "form-control", placeholder = "How many people will come" })
			</div>
			<div class="form-group">
				<label>Name</label>
				@Html.TextBoxFor(model => model.Name, new { @class = "form-control", placeholder = "Your name"})
			</div>
			<div class="form-group">
				<button type="submit" class="btn btn-default">Submit</button>
			</div>
		</div>
	</div>
}