@{
	ViewBag.Title = "Home Page";
}

<div class="jumbotron">
	<h1>ASP.NET</h1>
	<p class="lead">ASP.NET is a free web framework for building great Web sites and Web applications using HTML, CSS and JavaScript.</p>
	<p><a href="http://asp.net" class="btn btn-primary btn-lg">Learn more &raquo;</a></p>
</div>

<div class="row">
	<div class="col-md-4">
		<h2>Order your meal</h2>
		<form>
			<div class="form-group">
				<label for="meal">Meal</label>
				<select name="meal" class="form-control" id="meal">
					<option value="svickova">Svíčková s knedlíkem</option>
					<option value="zelny-salat">Zelný salát</option>
				</select>
			</div>
			<div class="form-group">
				<label for="date">Date</label>
				<input class="form-control" type="text" name="date" id="date">
			</div>
			<button type="submit" class="btn btn-default">Submit</button>
		</form>
	</div>
	<div class="col-md-8">
		<h2>Your Orders</h2>
		<table class="table">
			<thead>
			<tr>
				<td>Date</td>
				<td>Meal name</td>
				<td>Person Name</td>
				<td>Order time</td>
			</tr>
			</thead>
			<tbody>
			<tr>
				<td>27.01.2017</td>
				<td>Svíčková s knedlíkem</td>
				<td>Moravec, Albert</td>
				<td>24.01.2017 14:28:01</td>
			</tr>
			</tbody>
		</table>
	</div>
</div>