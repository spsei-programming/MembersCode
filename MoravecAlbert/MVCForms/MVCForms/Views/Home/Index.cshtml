@{
	ViewBag.Title = "Home Page";
}

<div class="jumbotron">
	<h1>ASP.NET</h1>
	<p class="lead">ASP.NET is a free web framework for building great Web sites and Web applications using HTML, CSS and JavaScript.</p>
	<p><a href="http://asp.net" class="btn btn-primary btn-lg">Learn more &raquo;</a></p>
</div>

<div class="row">
	<div class="col-md-4">
		<h2>Order your meal</h2>
		<p>
			<form>
				<div class="form-group">
					<label for="">First Name</label>
					<input class="form-control" type="text" name="firstName" />
				</div>
				<div class="form-group">
					<label for="">Last Name</label>
					<input class="form-control" type="text" name="lastName" />
				</div>
				<div class="form-group">
					<label for="">Meal</label>
					<select name="meal" class="form-control"></select>
				</div>
				<div class="radio">
					<label>
						<input type="radio" name="userType" value="extern"> Student
					</label>
					<label>
						<input type="radio" name="userType" value="extern"> Teacher
					</label>
					<label>
						<input type="radio" name="userType" value="extern"> Externist
					</label>
				</div>
				<div class="form-group">
					<label for="">Date</label>
					<input class="form-control" type="text" name="date" />
				</div>
				<button type="submit" class="btn btn-default">Submit</button>
			</form>
		</p>
	</div>
	<div class="col-md-8">
		<h2>Orders</h2>
		<p>

		</p>
	</div>
</div>