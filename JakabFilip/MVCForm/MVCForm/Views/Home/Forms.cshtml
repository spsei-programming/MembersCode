@{
	Layout = "~/Views/Shared/_Layout.cshtml";
}

<!DOCTYPE html>

<html>
<head>
	<meta name="viewport" content="width=device-width" />
	<title>Forms</title>
</head>
<body>
<button style="margin: 3% 0 1% 0;" type="button" data-toggle="collapse" data-target="#meal-order-form" class="btn btn-info">
	Meal Order Form ⟫
</button>
	<div id="meal-order-form" class="row collapse">
		<div class="col-md-4 col-md-offset-4">
			<form id="meal-order">
				<div class="form-group">
					<label for="email-adress">Email Adress</label>
					<input type="email" name="email" class="form-control" id="email-adress" placeholder="Email" />
				</div>
				<div class="form-group">
					<label for="password">Password</label>
					<input type="password" name="password" class="form-control" id="password" placeholder="Password" />
				</div>
				<label>Who are you ?</label>
				<div class="checkbox">
					<input type="checkbox" class="checkbox" name="user-type" value="spsei-student" checked /> SPSei Student
				</div>
				<div class="checkbox">
					<input type="checkbox" class="checkbox" name="user-type" value="spsei-personal" /> SPSei personal
				</div>
				<div class="checkbox">
					<input type="checkbox" class="checkbox" name="user-type" value="externist" /> Externist
				</div>
				<div class="form-group">
					<label for="meal-id">Choose Meal</label>
					<select class="form-control" id="meal-id">
						<option value="Meal#01">Meal 01</option>
						<option value="Meal#01">Meal 02</option>
						<option value="Meal#01">Meal 03</option>
						<optgroup label="Vegan Food">
							<option value="Meal#01">Vegan Meal 04</option>
							<option value="Meal#01">Vegan Meal 05</option>
							<option value="Meal#01">Vegan Meal 06</option>
						</optgroup>
					</select>
				</div>
				<div class="form-group">
					<input type="date" class="glyphicon-calendar" />
				</div>

				<input type="submit" class="btn btn-info" value="Submit" />
			</form>
		</div>
	</div>
</body>
</html>
