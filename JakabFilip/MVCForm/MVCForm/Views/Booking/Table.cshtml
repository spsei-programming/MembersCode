@using MVCForm.Models.Booking
@model List<MVCForm.Models.Booking.BookTableVM>

@{
	ViewBag.Title = "Table";
}

<h2>Table</h2>


@using (Html.BeginForm("SaveTable", "Booking", FormMethod.Post))
{
	<div class="row">
		<div class="col-md-6 col-md-offset-3">
			<fieldset>
				<legend>Form</legend>

				<div class="form-group">
					<label>Datum</label>
					@Html.TextBoxFor(model => model.Date, new { type = "date", @class = "form-control glyphicon-calendar", placeholder = "Na kdy ?" })
				</div>

				<div class="form-group">
					<label>Počet lidí</label>
					@Html.TextBoxFor(model => model.AmountOfPeople, new { @class = "form-control", placeholder = "Pro kolik lidí ?" })
				</div>

				<div class="form-group">
					<label>Jméno</label>
					@Html.TextBoxFor(model => model.Name, new { @class = "form-control", placeholder = "Jméno rezervovatele"})
				</div>

				<div class="form-group">
					<input type="submit" class="btn btn-default"/>
				</div>
			</fieldset>
		</div>
	</div>
}

<div class="row">
	<div class="col-md-6">
		<table class="table table-hover">
			<thead>
			<tr>
				<th>
					Jméno
				</th>
				<th>
					Datum
				</th>
				<th>
					Počet lidí
				</th>
			</tr>
			</thead>
			<tbody>
			@foreach (BookTableVM table in Model)
			{
				<tr>
					<td>
						@table.Name
					</td>
					<td>
						@table.Date.ToString("dd.MM.yyyy")
					</td>
					<td>
						@
					</td>
				</tr>
			}
			</tbody>
		</table>
	</div>
</div>